# Maintainer: taotieren <admin@taotieren.com>

pkgbase=rkbin
pkgname=rkbin-{rkboot,rktrust,bin,tools,scripts}
pkgver=1.0.4
pkgrel=1
epoch=
pkgdesc="Rockchip Firmware and Tool Binarys"
arch=('any')
url="https://github.com/rockchip-linux/rkbin"
license=('unknow')
groups=()
depends=('libusb')
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!strip')
install=
changelog=
source=("${pkgbase}::git+${url}.git")
noextract=()
sha256sums=('SKIP')
#validpgpkeys=()

package_${pkgbase}-rkboot () {

    install -dm0755 "${pkgdir}/opt/rockchip/${pkgbase}"
    cp -rv ${srcdir}/${pkgbase}/. "${pkgdir}/opt/rockchip/${pkgbase}"
}
