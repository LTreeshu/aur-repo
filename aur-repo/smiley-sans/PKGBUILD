# Maintainer: taotieren <admin@taotieren.com>

pkgbase=smiley-sans
pkgname=({ttf,otf,woff2}-$pkgbase)
pkgver=1.0.0
pkgrel=1
url="https://github.com/atelier-anchor/smiley-sans"
depends=('fontconfig')
license=("OFL-1.1")
arch=(any)
source=(
    "${url}/releases/download/v${pkgver}/${pkgname#ttf-}-v${pkgver}.zip"
    "LICENSE::https://raw.githubusercontent.com/atelier-anchor/smiley-sans/main/LICENSE"
)

sha256sums=('8293c9b9fd44c9ee6b3fab696862445059e4d98b341a148d4544f91d01363fc1'
            '8a4a31fcdfea95babd556fc86e14bace5dd07754c06a5713680077de4eb2022e')

package_ttf-smiley-sans() {
    pkgdesc="得意黑 Smiley Sans for ttf"
    install -dm755 "$pkgdir/usr/share/fonts/TTF" \
                    "$pkgdir/usr/share/licenses/${pkgname}"

    install -m644 *.ttf "$pkgdir/usr/share/fonts/TTF/"
    install -m644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/"
}

package_otf-smiley-sans() {
    pkgdesc="得意黑 Smiley Sans for otf"
    install -dm755 "$pkgdir/usr/share/fonts/OTF" \
                    "$pkgdir/usr/share/licenses/${pkgname}"

    install -m644 *.otf "$pkgdir/usr/share/fonts/OTF/"
    install -m644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/"
}

package_woff2-smiley-sans() {
    pkgdesc="得意黑 Smiley Sans for woff2"
    install -dm755 "$pkgdir/usr/share/fonts/WOFF2" \
                    "$pkgdir/usr/share/licenses/${pkgname}"

    install -m644 *.woff2 "$pkgdir/usr/share/fonts/WOFF2/"
    install -m644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/"
}
